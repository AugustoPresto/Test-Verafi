<div class="container items-center">
  <div class="shadow p-3 mb-3 bg-white rounded">
    <% @server_statuses.each do |server_status| %>
        <h3 class="pt-2 text-status"><b><%= server_status.message %> - <%= server_status.status %></b></h3>
        <h4 class="text-muted text-timestamp">Updated at <%= server_status.created_at.strftime("%k:%M:%S %e %B %Y") %></h4>
    <% end %>
  </div>

  <% if user_signed_in? %>
    <div class="container items-center">
      <p><%= link_to "Update server status", new_server_status_path, class: 'btn btn-info btn-sm' %></p>
    </div>
  <% end %>
</div>
